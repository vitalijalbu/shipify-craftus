{% style %}
  /* Body Font: Regular */
  @font-face {
    font-family: "{{ settings.type_body_font.family }}";
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url("{{ settings.type_body_font | font_url: weight: '400', style: 'normal' }}") format("woff2");
  }

  /* Body Font: Bold */
  @font-face {
    font-family: "{{ settings.type_body_font.family }}";
    font-weight: 700;
    font-style: normal;
    font-display: swap;
    src: url("{{ settings.type_body_font | font_url: weight: '700', style: 'normal' }}") format("woff2");
  }

  /* Body Font: Italic */
  @font-face {
    font-family: "{{ settings.type_body_font.family }}";
    font-weight: 600;
    font-style: italic;
    font-display: swap;
    src: url("{{ settings.type_body_font | font_url: weight: '500', style: 'italic' }}") format("woff2");
  }

  /* Body Font: Bold Italic */
  @font-face {
    font-family: "{{ settings.type_body_font.family }}";
    font-weight: 700;
    font-style: italic;
    font-display: swap;
    src: url("{{ settings.type_body_font | font_url: weight: '700', style: 'italic' }}") format("woff2");
  }

  /* Header Font */
  @font-face {
    font-family: "{{ settings.type_header_font.family }}";
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url("{{ settings.type_header_font | font_url: weight: '400', style: 'normal' }}") format("woff2");
  }
{% endstyle %}
