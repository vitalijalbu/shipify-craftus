<div class="card-wrapper product-card-wrapper underline-links-hover">
  <div class="card card--product">
    <div class="card__media shape--arch">
      <div class="media">
        <!-- Primary Image -->
        {% render 'image', 
          image: card_product.featured_media, 
          class: 'primary-image', 
          lazyload: true, 
          alt: card_product.featured_media.alt 
        %}

        <!-- Optional Secondary Image for Hover -->
        {% if card_product.media[1] %}
          {% render 'image', 
            image: card_product.media[1], 
            class: 'secondary-image', 
            lazyload: true, 
            alt: card_product.media[1].alt 
          %}
        {% endif %}
      </div>
    </div>
    <div class="card__content text-left">
      <h3 class="card__heading">
        <a href="{{ card_product.url }}" class="full-unstyled-link">
          {{ card_product.title | escape }}
        </a>
      </h3>
      <div class="card__price">
        {%- if card_product.available == false -%}
          <span>
            {{- 'products.product.sold_out' | t -}}
          </span>
        {% else %}
        {% render 'price', product: card_product %}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
